  <div class="main main-raised">
    <div class="profile-content">
      <div class="container">
        <div class="row">
          <div class="col-md-6 ml-auto mr-auto">
            <div class="profile">
              <div class="avatar">
                <img src="{{user_image}}" alt="Circle Image" class="img-raised rounded-circle img-fluid">
              </div>
              <div class="name">
                <h3 class="title">{{username}}</h3>
              </div>
            </div>
          </div>
        </div>
        
    	{{#each suitcase}}
			
			{{> suitcase-card }}
			  
		{{/each}}
  </div>